<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_product_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="x1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papi bacon"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black1"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_ingredients"
        app:layout_constraintStart_toEndOf="@+id/tv_product_amount"/>

    <TextView
        android:id="@+id/tv_ingredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sin jitomate, sin cebolla, sin lechuga"
        android:textSize="18sp"
        android:textColor="@color/black1"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@+id/tv_product_name"
        app:layout_constraintEnd_toStartOf="@+id/btn_add"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_name"
        app:layout_constraintStart_toEndOf="@+id/tv_product_name"/>

    <TextView
        android:id="@+id/btn_add"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_filled_round"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/foreground_nav_button"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_minus"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/btn_minus"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/bg_filled_round"
        android:backgroundTint="@color/red1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/foreground_nav_button"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>