<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.humbjorch.restaurantapp.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.humbjorch.restaurantapp.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_orderTypeSelectionFragment"
            app:destination="@id/orderTypeSelectionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_orderSectionFragment"
            app:destination="@id/orderSectionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_summaryFragment"
            app:destination="@id/summaryFragment" />
        <action
            android:id="@+id/action_homeFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderTypeSelectionFragment"
        android:name="com.humbjorch.restaurantapp.ui.orderRegister.orderTypeSelection.OrderTypeSelectionFragment"
        android:label="fragment_order_type_selection"
        tools:layout="@layout/fragment_order_type_selection">
        <argument
            android:name="tablePosition"
            android:defaultValue="-1"
            app:argType="integer"
            app:nullable="false" />
        <argument
            android:name="order"
            app:argType="com.humbjorch.restaurantapp.data.model.OrderModel"
            app:nullable="true" />
        <argument
            android:name="isEdict"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="address"
            android:defaultValue=""
            app:argType="string"
            app:nullable="false" />
        <action
            android:id="@+id/action_orderTypeSelectionFragment_to_orderSectionFragment"
            app:destination="@id/orderSectionFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderSectionFragment"
        android:name="com.humbjorch.restaurantapp.ui.orderRegister.orderSection.OrderSectionFragment"
        android:label="fragment_order_section"
        tools:layout="@layout/fragment_order_section">
        <argument
            android:name="tablePosition"
            app:argType="integer" />
        <argument
            android:name="order"
            app:argType="com.humbjorch.restaurantapp.data.model.OrderModel"
            app:nullable="true" />
        <argument
            android:name="isEdict"
            android:defaultValue="false"
            app:argType="boolean"
            app:nullable="false" />
        <argument
            android:name="address"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_orderSectionFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.humbjorch.restaurantapp.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_summaryFragment"
            app:destination="@id/summaryFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>

    <fragment
        android:id="@+id/summaryFragment"
        android:name="com.humbjorch.restaurantapp.ui.summary.SummaryFragment"
        android:label="fragment_summary"
        tools:layout="@layout/fragment_summary">
        <action
            android:id="@+id/action_summaryFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_summaryFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_summaryFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.humbjorch.restaurantapp.ui.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/action_historyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_historyFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_historyFragment_to_summaryFragment"
            app:destination="@id/summaryFragment" />
    </fragment>

</navigation>